{
	"name": "tembo-discord-bot",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"register-commands": "bun run src/scripts/register-commands.ts",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"type-check": "tsc --noEmit",
		"lint": "tsc --noEmit",
		"version:patch": "bun pm version patch",
		"version:minor": "bun pm version minor",
		"version:major": "bun pm version major",
		"release": "bun pm version minor && bun run deploy"
	},
	"dependencies": {
		"@tembo-io/sdk": "^0.1.3",
		"discord-interactions": "^4.4.0",
		"hono": "^4.11.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@cloudflare/workers-types": "^4.20251218.0",
		"@types/node": "^24.10.4",
		"@vitest/coverage-v8": "4.0.9",
		"discord-api-types": "^0.38.37",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"wrangler": "^4.56.0"
	}
}
